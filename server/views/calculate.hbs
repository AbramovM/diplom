        <form method="POST">
            <div style="height: 80%; margin: 0 auto;">
                <div class="input">
                    <label class="label-password">От:</label>
                    <input class="button" id="from" type="text" class="text" name="from" placeholder="От" tabindex="2" required />
                </div>
                <div class="input">
